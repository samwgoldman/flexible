<?xml version="1.0" encoding="utf-8"?>
<!--- The default skin class for the CheckBoxGroup container.
      @see com.samgoldmansoftware.components.CheckBoxGroup
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">
    <fx:Metadata>[HostComponent("com.samgoldmansoftware.components.CheckBoxGroup")]</fx:Metadata>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
    
    <!--
      Note: setting the minimum size to 0 here so that changes to the host component's
      size will not be thwarted by this skin part's minimum size.   This is a compromise,
      more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
    -->
    <!--- @copy spark.components.SkinnableDataContainer#dataGroup -->
	<s:Scroller id="scroller" left="0" right="0" top="0" bottom="0" minWidth="0" minHeight="0">
		<s:DataGroup id="dataGroup" />
	</s:Scroller>
</s:Skin>
